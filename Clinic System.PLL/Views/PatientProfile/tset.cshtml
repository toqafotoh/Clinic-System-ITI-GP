@using Clinic_System.BLL.ModelVM.PatientVM
@model PatientProfileVM

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MedLink</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <style>
        :root {
            --primary-color: #4a90e2;
            --secondary-color: #f5f7fa;
            --text-color: #333;
            --light-text-color: #6c757d;
            --accent-color: #ff6b6b;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--secondary-color);
            color: var(--text-color);
        }

        .patient-info-card {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .patient-photo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--primary-color);
        }

        .info-text {
            color: var(--light-text-color);
            font-size: 0.9rem;
            margin-bottom: 0.25rem;
        }

        .header-text {
            color: var(--text-color);
            font-weight: 500;
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #3a7ac8;
            border-color: #3a7ac8;
        }

        .btn-danger {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .btn-danger:hover {
            background-color: #ff5252;
            border-color: #ff5252;
        }

        .nav-pills .nav-link.active {
            background-color: var(--primary-color);
        }

        .table {
            background-color: #ffffff;
            border-radius: 10px;
            overflow: hidden;
        }

        .table thead th {
            background-color: var(--primary-color);
            color: #ffffff;
            border-color: #3a7ac8;
        }
    </style>
</head>

<body>
    <div class="container my-5">
        <!-- Patient Information Section -->
        <div class="row patient-info-card" id="PatientProfile">
            <div class="col-md-3 text-center mb-4 mb-md-0">
                @{
                    string image = "DefaultProfilePhoto.jpg";
                    if (Model.Image is not null) image = Model.Image;
                }
                <img src="~/imges/PatientProfilePhoto/@image" alt="Patient Photo" class="patient-photo mb-3">
                <h5 class="header-text">@Model.FirstName @Model.LastName</h5>
                <p class="info-text"><i class="fas fa-envelope me-2"></i>@Model.Email</p>
            </div>
            <!--Interferes Bug-->
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <p class="info-text"><i class="fas fa-venus-mars me-2"></i>Gender</p>
                        <p class="header-text">
                            @{
                                string gender = "Male";
                                if ((int)Model.Gender == 1) gender = "Female";
                            }
                            @gender</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="info-text"><i class="fas fa-birthday-cake me-2"></i>Birthdate</p>
                        <p class="header-text">Oct. 25, 1992</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="info-text"><i class="fas fa-phone me-2"></i>Phone number</p>
                        <p class="header-text">(063) 222-3333</p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="btn-group d-flex flex-wrap" role="group">
                            <button class="btn btn-primary me-2 mb-2" data-bs-toggle="modal"
                                    data-bs-target="#changePasswordModal">
                                <i class="fas fa-key me-2"></i>Change
                                Password
                            </button>
                            <button class="btn btn-secondary me-2 mb-2" data-bs-toggle="modal"
                                    data-bs-target="#editEmailModal">
                                <i class="fas fa-envelope me-2"></i>Edit
                                Email
                            </button>
                            <button class="btn btn-secondary me-2 mb-2" data-bs-toggle="modal"
                                    data-bs-target="#editPhoneModal">
                                <i class="fas fa-phone me-2"></i>Edit
                                Phone
                            </button>
                            <button class="btn btn-danger mb-2" data-bs-toggle="modal"
                                    data-bs-target="#deleteAccountModal">
                                <i class="fas fa-user-times me-2"></i>Delete
                                Account
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- Edit Email Modal -->
    <div class="modal fade" id="editEmailModal" tabindex="-1" aria-labelledby="editEmailModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editEmailModalLabel">Edit Email</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editEmailForm" method="post">
                        <div class="mb-3"> 
                            <label for="newEmail" class="form-label">New Email</label>
                            <input type="email" class="form-control" id="newEmail" required>                     
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="editEmailBtn" form="editEmailForm">Update Email</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#upcomingAppointments, #pastAppointments').DataTable({
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search appointments...",
                },
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip',
            });
        });
    </script>
</body>

</html>