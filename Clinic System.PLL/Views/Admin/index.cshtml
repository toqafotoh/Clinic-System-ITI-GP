@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Hover effect for all cards */
    .card:hover {
        background-color: #c2d6e9;
        /* Change to a light color of your choice */
        transition: background-color 0.3s ease;
        /* Smooth transition effect */
    }
</style>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a  herf="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
    </a>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Number of Patients Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Number of Patients
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">500</div>
                        <!-- Example number -->
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-procedures fa-2x text-gray-300"></i> <!-- Patient icon -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Number of Appointments Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Appointments
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">120</div>
                        <!-- Example number -->
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        <!-- Appointment icon -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Earnings Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Earnings
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">$255,000</div>
                        <!-- Example earnings -->
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        <!-- Dollar sign icon -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Number of Departments Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Departments
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                        <!-- Example number -->
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300"></i>
                        <!-- Building/department icon -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pie Chart -->
    <div class="d-flex justify-content-between" style="width:100%;">
        <!-- Pie Chart Card -->
        <div class="col-lg-4 col-12 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Appointments by Medical Department
                    </h6>
                </div>
                <div class="card-body d-flex align-items-center">
                    <!-- ApexCharts Pie Chart will render here -->
                    <div id="apexcharts-pie" style="width: 100%;"></div>
                </div>
            </div>
        </div>

        <!-- Bar Chart Card -->
        <div class="col-lg-8 col-12 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bar Chart</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar">
                        <canvas id="myBarChart"></canvas>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var options = {
        chart: {
            height: 350,
            type: "pie",
        },
        dataLabels: {
            enabled: false
        },
        series: [150, 100, 80, 120],  // Number of appointments for each department
        labels: ["Surgery", "Pediatrics", "Dermatology", "Cardiology"],  // Department names
        colors: ["#d192cc", "#68f294", "#6b93db", "#e0d53d"],  // Custom colors
        legend: {
            position: 'bottom'
        },
    };

    var chart = new ApexCharts(
        document.querySelector("#apexcharts-pie"),
        options
    );

    chart.render();
</script>
<!-- Add this script inside your <script> tags -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById("myBarChart").getContext('2d');
    var myBarChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["Surgery", "Pediatrics", "Radiology", "Cardiology", "Oncology", "Orthopedics"],
            datasets: [{
                label: 'Appointments',
                data: [25, 15, 12, 30, 18, 22], // Example data for appointments per department
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
