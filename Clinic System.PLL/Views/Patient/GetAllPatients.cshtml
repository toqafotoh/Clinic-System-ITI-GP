@using Clinic_System.BLL.ModelVM.PatientVM
@model List<GetAllPatientVM>
@{
    ViewData["Title"] = "GetAllPatients";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Style the table */
    #patient-table {
        width: 100%;
        border-collapse: collapse;
    }

    /* Set the table header background color */
    #patient-table thead {
        background-color: #2d53c633; /* Light gray background for the header */
    }

    /* Style table rows */
    #patient-table tbody tr {
        background-color: white; /* White background for table rows */
    }

    /* Style table rows on hover */
    #patient-table tbody tr:hover {
        background-color: #f1f1f1; /* Light gray background on hover */
    }

    /* Style table cells */
    #patient-table th, #patient-table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd; /* Light gray border for cells */
    }
    /* #patient-table .male-row{
        background-color: rgb(169, 232, 243);
    }
    #patient-table .female-row{
        background-color: rgb(216, 172, 216);
    } */

    #patient-table .edit-btn:hover, #patient-table .delete-btn:hover {
        text-decoration: underline;
    }

            .edit-btn, .delete-btn,.gender-btn {
                border: none;
                color: #fff;
                padding: 5px 10px;
                cursor: pointer;
                border-radius: 4px;
                font-size: 14px;
            }
            .edit-btn {
                background-color: #6ab470;
            }
            .delete-btn {
                background-color: #dc3545;
            }
            .edit-btn:hover, .delete-btn:hover {
                opacity: 0.8;
            }
            .edit-btn i, .delete-btn i {
                margin-right: 5px;
            }

    .gender-icon {
        margin-right: 5px;
        font-size: 1.2em;
    }

    /* Style male gender */
    .male {
        color: rgb(0, 191, 255); /* Blue color for male */
    }

    /* Style female gender */
    .female {
        color: rgb(228, 17, 228); /* Pink color for female */
    }
</style>

<table id="patient-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var patient in Model)
        {
            <tr>
                <td>@patient.PatientID</td>
                <td>@patient.FullName</td>
                <td>@patient.Age</td>
                @if (patient.Gender == Clinic_System.DAL.Enum.Gender.Male)
                {
                    <td class="gender-cell">
                        <button class="gender-btn male"><i class="fas fa-male gender-icon"></i> Male</button>
                    </td>
                }
                else
                {
                    <td class="gender-cell">
                        <button class="gender-btn female"><i class="fas fa-female gender-icon"></i> Female</button>
                    </td>
                }
                <td>@patient.Email</td>
                <td>@patient.PhoneNumber</td>
                <td>
                    @* <button class="edit-btn"><i class="fas fa-edit"></i>Edit</button> *@
                    <a onclick="deletePatient(@patient.PatientID)" class="btn btn-sm btn-danger" href="@Url.Action("DeletePatient", "Patient", new { id = patient.PatientID })">
                        <i class="fas fa-trash-alt"></i> Remove
                    </a>
                </td>
            </tr>

        }
        
    </tbody>

    <tfoot>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </tfoot>
</table>

