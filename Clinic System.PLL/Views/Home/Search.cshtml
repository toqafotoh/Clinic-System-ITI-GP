  <div class="search-container" >
    <!-- Header Section -->
    <div class="search-header">
      <h2><i class="fas fa-user-md icon"></i>Book a Doctor</h2>
      <p>Consultation or Procedure</p>
    </div>

    <!-- Search Bar Section -->
    <div class="search-bar">
      <div class="search-select-icon">
        <i class="fas fa-stethoscope icon"></i>
        <select class="search-select" required>
          <option value="" disabled selected>Select Specialty</option>
          <option value="cardiology">Cardiology</option>
          <option value="neurology">Neurology</option>
          <option value="orthopedics">Orthopedics</option>
          <!-- Add more options as needed -->
        </select>
      </div>
 
      <input type="text" placeholder="Enter doctor name" class="search-input">
      <a href="search.html" class="search-button">
        <i class="fas fa-search icon"></i>Search
      </a>
    </div>
  </div>
  <div class="doctor-container">
    <!-- Doctor Header Section -->
    <div class="doctor-header">
      <img src="~/imges/Elgraihy.jpg" alt="Doctor Photo">
      <div class="doctor-info">
        <h2>Dr. Moamen Elgraihy</h2>
        <p>Consultant in orthopedic surgery, spine and joint surgery, knee and shoulder arthroscopy, and sports injuries</p>
      </div>
    </div>

    <!-- Schedule Table Section -->
    <table class="schedule-table">
      <thead>
        <tr>
          <th>Day</th>
          <th>Time Slots</th>
          <th>Book</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Today</td>
          <td>
            <select>
              <option value="">Select Time</option>
              <option value="12:00 PM">12:00 PM</option>
              <option value="1:30 PM">1:30 PM</option>
              <option value="3:00 PM">3:00 PM</option>
            </select>
          </td>
          <td><button class="book-btn">Book</button></td>
        </tr>
        <tr>
          <td>Tomorrow</td>
          <td>
            <select>
              <option value="">Select Time</option>
              <option value="12:00 PM">12:00 PM</option>
              <option value="1:30 PM">1:30 PM</option>
              <option value="3:00 PM">3:00 PM</option>
            </select>
          </td>
          <td><button class="book-btn">Book</button></td>
        </tr>
        <tr>
          <td>Thursday 13/7</td>
          <td>
            <select>
              <option value="">Select Time</option>
              <option value="12:00 PM">12:00 PM</option>
              <option value="1:30 PM">1:30 PM</option>
              <option value="3:00 PM">3:00 PM</option>
            </select>
          </td>
          <td><button class="book-btn">Book</button></td>
        </tr>
      </tbody>
    </table>

    <!-- Doctor Details Section -->
    <div class="doctor-details">
      <ul>
        <li><i class="fas fa-user-md"></i>Consultant in orthopedic surgery, spine and joint surgery, knee and shoulder arthroscopy.</li>
        <li><i class="fas fa-wallet"></i> Consultation Fee: 300 EGP</li>
        <li><i class="fas fa-phone"></i> 0123456789 - For Appointments</li>
      </ul>
    </div>
  </div>
  <footer>
    <div class="container1">
        <div class="row">
              <div class="col" id="company">
                <div class="logo-container">
                    <div class="logo">
