@model Clinic_System.BLL.ModelVM.RegisterionVM
@using Clinic_System.DAL.Enum
@{
    ViewData["Title"] = "Registerion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Registerion</title>
    <style>
        @@media (max-width: 768px) {
            .vh-100 {
                height: auto;
            }
            .card {
                height: auto;
                border-radius: 15px;
            }
            .order-1, .order-2 {
                order: 1 !important;
            }
            .img-fluid {
                height: auto;
                max-width: 100%;
            }
        }
        .btn-lg {
            width: 100%;
        }
        .input-group-text {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <section class="vh-100" style="background: linear-gradient(to right, rgba(239,246,254,255) 50%, #4da7f9 50%);">
        <div class="container-fluid h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px; opacity: 0.9;">
                        <div class="card-body p-md-4">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-1 order-lg-1">
                                    <p class="text-center h1 fw-bold mb-4 mx-1 mx-md-4 mt-4">Sign up</p>

                                    <form class="mx-1 mx-md-4" asp-action="Registerion" asp-controller="Account" enctype="multipart/form-data">
                                        <div asp-validation-summary="All" class="text-danger"></div>

                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label asp-for="FirstName" class="form-label"><i class="fas fa-user fa-fw"></i> First Name</label>
                                                <input asp-for="FirstName" type="text" class="form-control" />
                                                <span class="text-danger" asp-validation-for="FirstName"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="LastName" class="form-label"><i class="fas fa-user fa-fw"></i> Last Name</label>
                                                <input asp-for="LastName" type="text" class="form-control" />
                                                <span class="text-danger" asp-validation-for="LastName"></span>
                                            </div>
                                        </div>

  @*                                       <div class="mb-2">
                                            <label asp-for="UserName" class="form-label"><i class="fas fa-user fa-fw"></i> User Name</label>
                                            <input asp-for="UserName" type="text" class="form-control" />
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div> *@
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label asp-for="UserName" class="form-label"><i class="fas fa-user fa-fw"></i> User Name</label>
                                                <input asp-for="UserName" type="text" class="form-control" />
                                                <span class="text-danger" asp-validation-for="UserName"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-2">
                                                    <label asp-for="Gender" class="form-label"><i class="fas fa-venus-mars fa-fw"></i> Gender</label>
                                                    <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Clinic_System.DAL.Enum.Gender>()"></select>
                                                    <span class="text-danger" asp-validation-for="Gender"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label asp-for="Email" class="form-label"><i class="fas fa-envelope fa-fw"></i> Email</label>
                                                <input asp-for="Email" type="email" class="form-control" />
                                                <span class="text-danger" asp-validation-for="Email"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="Address" class="form-label"><i class="fas fa-home fa-fw"></i> Address</label>
                                                <input asp-for="Address" type="text" class="form-control" />
                                                <span class="text-danger" asp-validation-for="Address"></span>
                                            </div>
                                        </div>

                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label asp-for="PhoneNumber" class="form-label"><i class="fa fa-phone" aria-hidden="true"></i> Phone Number</label>
                                                <input asp-for="PhoneNumber" type="tel" class="form-control" />
                                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="Age" class="form-label"><i class="fa fa-calendar" aria-hidden="true"></i> Age</label>
                                                <input asp-for="Age" type="number" class="form-control" />
                                                <span class="text-danger" asp-validation-for="Age"></span>
                                            </div>
                                        </div>

                                        <div class="mb-2">
                                            <label asp-for="Password" class="form-label"><i class="fas fa-lock fa-fw"></i> Password</label>
                                            <div class="input-group">
                                                <input asp-for="Password" type="password" class="form-control" id="password" />
                                                <span class="input-group-text" onclick="togglePassword('password', 'togglePasswordIcon')">
                                                    <i class="fa fa-eye" id="togglePasswordIcon"></i>
                                                </span>
                                            </div>
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>

                                        <div class="mb-4">
                                            <label asp-for="ConfirmPassword" class="form-label"><i class="fas fa-key fa-fw"></i> Confirm Password</label>
                                            <div class="input-group">
                                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" />
                                                <span class="input-group-text" onclick="togglePassword('confirmPassword', 'toggleConfirmPasswordIcon')">
                                                    <i class="fa fa-eye" id="toggleConfirmPasswordIcon"></i>
                                                </span>
                                            </div>
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>

                                        <div class="mb-4">
                                            <label asp-for="ImageFile" class="form-label"><i class="fa fa-image" aria-hidden="true"></i> Profile Photo</label>
                                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                            <span class="text-danger" asp-validation-for="ImageFile"></span>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-lg mb-3">Register</button>
                                        <p class="small fw-bold mt-2 pt-1 mb-0">Already a member? <a asp-action="Login" asp-controller="Account" style="color: #ff238d;">Login</a></p>
                                    </form>
                                </div>

                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-2 order-lg-2">
                                    <img src="~/Systembackground/cc.gif" class="img-fluid" alt="Sample image" style="max-height:70%; position: relative; right: -15%;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function togglePassword(fieldId, iconId) {
            var passwordField = document.getElementById(fieldId);
            var icon = document.getElementById(iconId);

            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>
