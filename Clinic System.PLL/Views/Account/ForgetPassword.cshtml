@model Clinic_System.BLL.ModelVM.ForgetPasswordMV
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Ensure full height for html and body */
        html, body {
            height: 100%;
        }

        /* Card Styling */
        .card {
            width: 80vw; /* Responsive width based on viewport */
            max-width: 400px; /* Limit the maximum size */
            height: auto; /* Allow the height to be flexible */
            border-radius: 20px; /* Responsive border radius */
            border: 5px solid;
            border-image: linear-gradient(to right, #4da7f9 50%, rgba(239,246,254,255) 50%);
            border-image-slice: 1;
            color: #4da7f9;
            background-color: #fff;
        }

        /* Image Styling */
        .card-img-top {
            width: 100%;
            height: auto; /* Image will adjust height automatically */
            border-radius: 20px 20px 0 0; /* Border radius at the top only */
        }

        /* Card Container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            min-height: 100vh; /* Ensure the background covers entire page */
            background: linear-gradient(to right, rgba(239,246,254,255) 50%, #4da7f9 50%);
        }

        /* Text Styling */
        .card-body p {
            text-align: center;
            font-size: 1.2em;
            padding: 15px;
        }
    </style>
</head>
<body>


    <div class="container">
     <div class="col-md-4">
        @if (Model != null && Model.EmailSent ==true)
         {
             <div class="alert alert-success" role="alert">
                <p>We have sent an Email </p>
            </div>

         }

         
                <div class="card">
                    <img class="card-img-top" src="~/Systembackground/lock.png" alt="Card image cap">
                    <div class="card-body">
                        <form asp-action="ForgetPassword" asp-controller="Account">
                            <div class="d-flex flex-row align-items-center mb-2">
                                <i style="position:relative;top:15px;" class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                    <label asp-for="Email" class="form-label">Your Email</label>
                                    <input asp-for="Email" type="email" id="form3Example3c" class="form-control" style="margin-left:-15px ;" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <button type="submit" class="btn btn-primary" style="margin-top:27px ;">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
 </div>
   


    </body>
</html>

