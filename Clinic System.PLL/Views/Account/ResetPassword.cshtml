@model Clinic_System.BLL.ModelVM.ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        /* Card Styling */
        .card {
            width: 80vw; /* Responsive width based on viewport */
            max-width: 400px; /* Limit the maximum size */
            height: auto; /* Allow the height to be flexible */
            border-radius: 20px; /* Responsive border radius */
            border: 5px solid;
            border-image: linear-gradient(to right, #4da7f9 50%, rgba(239,246,254,255) 50%);
            border-image-slice: 1;
            color: #4da7f9;
            background-color: #fff;
        }

        /* Image Styling */
        .card-img-top {
            width: 100%;
            height: auto; /* Image will adjust height automatically */
            border-radius: 20px 20px 0 0; /* Border radius at the top only */
        }

        /* Card Container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height */
            background: linear-gradient(to right, rgba(239,246,254,255) 50%, #4da7f9 50%);
            padding: 20px;
        }

        /* Text Styling */
        p {
            text-align: center;
            font-size: 1.2em;
            padding: 15px;
        }
    </style>
    <</head>

    <body>

<div class="container">

    <div class="card">
        <img class="card-img-top" src="~/Systembackground/tt.webp" alt="Card image cap">
        <div class="card-body">

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />


                <div class="d-flex flex-row align-items-center mb-4">

                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <label asp-for="NewPassword" class="form-label" for="password"> <i class="fas fa-lock fa-lg me-3 fa-fw"></i>New Password</label>
                        <div class="input-group">
                            <input type="password" asp-for="NewPassword" class="form-control" id="password" placeholder="Enter password">
                            <div class="input-group-append">
                                <span style="padding-bottom: 15px; align-content: center;" class="input-group-text" onclick="togglePassword('password', 'togglePasswordIcon')">
                                    <i class="fa fa-eye" id="togglePasswordIcon" style="align-items: center;"></i>
                                </span>
                            </div>
                        </div>
                        <span class="text-danger" asp-validation-for="NewPassword"></span>

                    </div>
                </div>


                    <div class="d-flex flex-row align-items-center mb-4">

                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <label asp-for="ConfirmPassword" class="form-label" for="confirmPassword"> <i class="fas fa-key fa-lg me-3 fa-fw"></i>Confirm password</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Enter password">
                                <div class="input-group-append">
                                    <span style="padding-bottom: 15px; align-content: center;" class="input-group-text" onclick="togglePassword('confirmPassword', 'toggleConfirmPasswordIcon')">
                                        <i class="fa fa-eye" id="toggleConfirmPasswordIcon" style="align-items: center;"></i>
                                    </span>
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
</form>

<div>
    <a asp-action="Login">Back to Login</a>
</div>
</body>
</html>