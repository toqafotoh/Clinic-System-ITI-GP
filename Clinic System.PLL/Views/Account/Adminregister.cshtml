@model Clinic_System.BLL.ModelVM.RegisterionVM
@{
    ViewData["Title"] = "Adminregister";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Admin Registration</title>
</head>
<body>
    <section class="vh-100" style="background: linear-gradient(to right, rgba(239,246,254,255) 50%, #4da7f9 50%);">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-7">
                    <div class="card text-black" style="border-radius: 25px; opacity: 0.9;">
                        <div class="card-body p-md-5">
                            <div class="text-center">
                                <h1 class="fw-bold mb-5">Create New Admin</h1>
                            </div>

                            <form asp-action="Registerion" asp-controller="Account">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <!-- First Name and Last Name -->
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="form-outline">
                                            <label asp-for="FirstName" class="form-label"> <i class="fas fa-user fa-fw"></i> First Name</label>
                                            <input asp-for="FirstName" type="text" class="form-control" />
                                            <span class="text-danger" asp-validation-for="FirstName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-outline">
                                            <label asp-for="LastName" class="form-label"> <i class="fas fa-user fa-fw"></i> Last Name</label>
                                            <input asp-for="LastName" type="text" class="form-control" />
                                            <span class="text-danger" asp-validation-for="LastName"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Username and adress -->
                                <div class="mb-4">
                                    <div class="col-md-6">
                                    <div class="form-outline">
                                        <label asp-for="UserName" class="form-label"> <i class="fas fa-user fa-fw"></i> User Name</label>
                                        <input asp-for="UserName" type="text" class="form-control" />
                                        <span class="text-danger" asp-validation-for="UserName"></span>
                                    </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-outline">
                                            <label asp-for="Address" class="form-label"><i class="fas fa-home fa-fw"></i> Address</label>
                                            <input asp-for="Address" type="text" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Address"></span>
                                        </div>
                                </div>
                                </div>

                                <!-- Email -->
                                <div class="mb-4">
                                    <div class="form-outline">
                                        <label asp-for="Email" class="form-label"> <i class="fas fa-envelope fa-fw"></i> Your Email</label>
                                        <input asp-for="Email" type="email" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                </div>

                                <!-- Phone Number and Age -->
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="form-outline">
                                            <label asp-for="PhoneNumber" class="form-label"> <i class="fa fa-phone fa-fw"></i> Phone Number</label>
                                            <input asp-for="PhoneNumber" type="tel" class="form-control" />
                                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-outline">
                                            <label asp-for="Age" class="form-label"> <i class="fa fa-calendar fa-fw"></i> Age</label>
                                            <input asp-for="Age" type="number" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Age"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Password and Confirm Password -->
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="form-outline">
                                            <label asp-for="Password" class="form-label"> <i class="fas fa-lock fa-fw"></i> Password</label>
                                            <div class="input-group">
                                                <input type="password" asp-for="Password" class="form-control" id="password" />
                                                <div class="input-group-append">
                                                    <span class="input-group-text" onclick="togglePassword('password', 'togglePasswordIcon')">
                                                        <i class="fa fa-eye" id="togglePasswordIcon"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-outline">
                                            <label asp-for="ConfirmPassword" class="form-label"> <i class="fas fa-key fa-fw"></i> Confirm Password</label>
                                            <div class="input-group">
                                                <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" />
                                                <div class="input-group-append">
                                                    <span class="input-group-text" onclick="togglePassword('confirmPassword', 'toggleConfirmPasswordIcon')">
                                                        <i class="fa fa-eye" id="toggleConfirmPasswordIcon"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                                    <p class="small fw-bold mt-2 pt-1 mb-0">Are You Sure? <a asp-action="Index" asp-controller="Admin" style="color: #ff238d;">Cancell</a></p>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function togglePassword(fieldId, iconId) {
            var passwordField = document.getElementById(fieldId);
            var icon = document.getElementById(iconId);

            // Toggle the type attribute
            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>
