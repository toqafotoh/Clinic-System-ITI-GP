@model Clinic_System.BLL.ModelVM.ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        /* Card Styling */
        .card {
            width: 80vw; /* Responsive width based on viewport */
            max-width: 400px; /* Limit the maximum size */
            height: auto; /* Allow the height to be flexible */
            border-radius: 20px; /* Responsive border radius */
            border: 5px solid;
            border-image: linear-gradient(to right, #4da7f9 50%, rgba(239,246,254,255) 50%);
            border-image-slice: 1;
            color: #4da7f9;
            background-color: #fff;
        }

        /* Image Styling */
   

        /* Card Container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height */
            background: linear-gradient(to right, rgba(239,246,254,255) 50%, #4da7f9 50%);
            padding: 20px;
        }

        /* Text Styling */
        p {
            text-align: center;
            font-size: 1.2em;
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="container">

        <div class="card">
           <p style="font-size:55px;">
                Change Password

           </p>
            
            <div class="card-body">

                <form asp-action="ChangePassword" asp-controller="Account">
                 


                    <div class="d-flex flex-row align-items-center mb-4">

                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <label asp-for="CurrentPassword" class="form-label" for="password"> <i class="fa-solid fa-lock-open fa-lg me-3"></i></i>Current Password</label>
                            <div class="input-group">
                                <input type="password" asp-for="CurrentPassword" class="form-control" id="password" placeholder="Enter Current password">
                                <div class="input-group-append">
                                    <span style="padding-bottom: 15px; align-content: center;" class="input-group-text" onclick="togglePassword('password', 'togglePasswordIcon')">
                                        <i class="fa fa-eye" id="togglePasswordIcon" style="align-items: center;"></i>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <label asp-for="NewPassword" class="form-label" for="newPassword"> <i class="fas fa-lock fa-lg me-3 fa-fw"></i>New Password</label>
                            <div class="input-group">
                                <input type="password" asp-for="NewPassword" class="form-control" id="newpassword" placeholder="Enter New password">
                                <div class="input-group-append">
                                    <span style="padding-bottom: 15px; align-content: center;" class="input-group-text" onclick="togglePassword('newpassword', 'togglenewPasswordIcon')">
                                        <i class="fa fa-eye" id="togglenewPasswordIcon" style="align-items: center;"></i>
                                    </span>
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="NewPassword"></span>

                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <label asp-for="ConfirmPassword" class="form-label" for="confirmPassword"> <i class="fas fa-key fa-lg me-3 fa-fw"></i>Confirm password</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Enter password">
                                <div class="input-group-append">
                                    <span style="padding-bottom: 15px; align-content: center;" class="input-group-text" onclick="togglePassword('confirmPassword', 'toggleConfirmPasswordIcon')">
                                        <i class="fa fa-eye" id="toggleConfirmPasswordIcon" style="align-items: center;"></i>
                                    </span>
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function togglePassword(fieldId, iconId) {
            var passwordField = document.getElementById(fieldId);
            var icon = document.getElementById(iconId);

            // Toggle the type attribute
            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

    </script>
</body>
</html>

