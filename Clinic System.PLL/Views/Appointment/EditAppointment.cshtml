@model Clinic_System.BLL.ModelVM.AppointmentVM.UpdateAppointmentVM
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Edit Appointment";
    var doctors = ViewBag.Doctors as List<Clinic_System.BLL.ModelVM.DoctorVM.GetAllDoctorsVM>;
}

<div class="edit-appointment-container">
    <h3>Edit Appointment</h3>

    <form asp-action="EditAppointment" method="post">
        <input type="hidden" asp-for="ID" />
        
        <div>
            <label for="doctor-dropdown">Select Doctor</label>
            <select id="doctor-dropdown" asp-for="DoctorID" class="form-control" required>
                <option value="" disabled>Select Doctor</option>
                @foreach (var doctor in doctors)
                {
                    <option value="@doctor.DoctorID">@doctor.FullName</option>
                }
            </select>
            <span asp-validation-for="DoctorID" class="text-danger"></span>
        </div>

        <div>
            <label for="appointment-date">Appointment Date</label>
            <input type="date" id="appointment-date" asp-for="AppointmentDate" class="form-control" required />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div>
            <label for="appointment-time">Appointment Time</label>
            <input type="time" id="appointment-time" asp-for="AppointmentTime" class="form-control" required />
            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
        </div>

        <div>
            <label for="patient-id">Patient ID (if applicable)</label>
            <input type="text" id="patient-id" asp-for="PatientID" class="form-control" />
            <span asp-validation-for="PatientID" class="text-danger"></span>
        </div>

        <button type="submit">Update Appointment</button>
    </form>
</div>
<style>

    .edit-appointment-container {
        background-color: #2d53c633;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

        .edit-appointment-container h3 {
            margin-bottom: 20px;
            font-size: 1.5rem;
            font-weight: bold;
            color: #898686;
        }

        .edit-appointment-container select,
        .edit-appointment-container input {
            width: calc(100% - 20px);
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 1rem;
        }

        .edit-appointment-container button {
            background-color: #4E73DF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
            font-size: 1rem;
        }

            .edit-appointment-container button:hover {
                background-color: #0056b3;
            }


</style>

