@model Clinic_System.BLL.ModelVM.DepartmentVM.EditDepartmentVM
@{
    ViewData["Title"] = "EditDepartment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="edit-department-container">
    <h3>Update Department</h3>
    <form asp-asp-controller="Department" asp-action="EditDepartment" method="post">
        <div>
            <input type="hidden" asp-for="ID" />
            <label for="department-name">Department Name</label>
            <input type="text" id="department-name" asp-for="Name" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label for="department-phone">Phone Number</label>
            <input type="text" id="department-phone" asp-for="PhoneNumber" class="form-control" required>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <button type="submit">Update Department</button>
    </form>
</div>
<style>

    .edit-department-container {
        background-color: #2d53c633;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

        .edit-department-container h3 {
            margin-bottom: 20px;
            font-size: 1.5rem;
            font-weight: bold;
            color: #898686;
        }

        .edit-department-container input {
            width: calc(100% - 20px);
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 1rem;
        }

        .edit-department-container button {
            background-color: #4E73DF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
            font-size: 1rem;
        }

            .edit-department-container button:hover {
                background-color: #0056b3;
            }
</style>